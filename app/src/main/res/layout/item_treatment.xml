<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFEBEE"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgTreatment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:layout_marginEnd="16dp"
            android:contentDescription="Treatment Image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de la Maladie"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"/>

            <TextView
                android:id="@+id/txtConfidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confiance: 85%"
                android:textSize="14sp"
                android:textColor="#E53935"/>

            <TextView
                android:id="@+id/txtSeverity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sévérité: Modéré"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Détecté"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"/>

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 Dec 2025"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>

            <!-- Action buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit"
                    android:tint="@android:color/black"
                    android:padding="6dp"/>

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_delete"
                    android:contentDescription="Delete"
                    android:tint="@android:color/black"
                    android:padding="6dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

