<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/card_cyan">

        <!-- Top row: Icon, Info, Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§"
                android:textSize="24sp"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTerrainName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom du Terrain"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#0277BD"/>

                <TextView
                    android:id="@+id/txtDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goutte-Ã -goutte â€¢ 50L"
                    android:textSize="14sp"
                    android:textColor="#039BE5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TerminÃ©"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"/>

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29 Dec 2025"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Control row: Mode, Manual Controls, Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <!-- Mode indicator -->
            <TextView
                android:id="@+id/txtMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– Auto"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:padding="4dp"
                android:background="#E8F5E9"
                android:layout_marginEnd="8dp"/>

            <!-- Friendly state label (real-time) -->
            <TextView
                android:id="@+id/txtIrrigationState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginEnd="12dp"
                android:padding="6dp"/>

            <!-- Manual controls (visible only in manual mode) -->
            <LinearLayout
                android:id="@+id/layoutManualControls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnManualOn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="ON"
                    android:textSize="12sp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@color/white"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnManualOff"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="OFF"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Action buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit"
                    android:tint="@android:color/black"
                    android:padding="6dp"/>

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_delete"
                    android:contentDescription="Delete"
                    android:tint="@android:color/black"
                    android:padding="6dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>