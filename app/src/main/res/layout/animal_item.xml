<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAnimal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Emoji de l'animal -->
        <TextView
            android:id="@+id/tvAnimalEmoji"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="ðŸ„"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_gravity="center_vertical" />

        <!-- Informations -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvAnimalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Animal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F5C2E" />

            <TextView
                android:id="@+id/tvAnimalSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EspÃ¨ce - Race"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvAnimalHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statut: Sain"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvAnimalWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poids: 0 kg"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Boutons d'action -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnEditAnimal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="#1F5C2E"
                android:contentDescription="Modifier" />

            <ImageButton
                android:id="@+id/btnDeleteAnimal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="#C62828"
                android:contentDescription="Supprimer"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>