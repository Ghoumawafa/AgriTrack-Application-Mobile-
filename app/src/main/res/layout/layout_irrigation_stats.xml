<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statsCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/card_cyan">

    <!-- Water Usage & Statistics -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“Š Water Usage"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#1B5E20"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today (sum)"
                android:textStyle="bold"
                android:textColor="#2E7D32"/>

            <TextView
                android:id="@+id/tvWaterUsedToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 L"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per irrigation (est.)"
                android:textStyle="bold"
                android:textColor="#2E7D32"/>

            <TextView
                android:id="@+id/tvEstimatedPerIrrigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 L"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="14dp">

        <TextView
            android:id="@+id/tvWaterSaved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ’¡ Saved: ~0%"
            android:textStyle="bold"
            android:textColor="#1565C0"/>

        <TextView
            android:id="@+id/tvEfficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Efficient"
            android:textStyle="bold"
            android:textColor="#1B5E20"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A000000"
        android:layout_marginBottom="12dp"/>

    <!-- Calendar Integration -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Calendar"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#1B5E20"
        android:layout_marginBottom="8dp"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a day"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvDateWaterUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No data"
        android:textColor="#616161"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvDateEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#455A64"
        android:textSize="13sp"
        android:layout_marginTop="6dp" />

</LinearLayout>
